<%- include('../../partials/header', { title: 'Assigned Tasks', user: user }) %>

<style>
  body {
    background-color: #f4f6f8;
    font-family: 'Inter', sans-serif;
  }

  .page-wrapper {
    padding: 2.5rem 0;
  }

  h3 {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  /* Task Grid */
  .tasks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.25rem;
  }

  .task-card {
    background: #fff;
    border-radius: 14px;
    padding: 1.25rem 1.5rem;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: all 0.2s ease;
  }

  .task-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  .task-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .task-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
    margin: 0;
  }

  .task-desc {
    color: #6c7a89;
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }

  .task-meta {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: #555;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .task-assigned {
    color: #2c3e50;
    font-weight: 500;
  }

  .badge {
    padding: 0.45em 0.8em;
    font-weight: 600;
    border-radius: 8px;
    text-transform: capitalize;
    font-size: 0.85rem;
  }

  .bg-success {
    background-color: #eafaf1 !important;
    color: #27ae60 !important;
  }

  .bg-warning {
    background-color: #fff6e0 !important;
    color: #f39c12 !important;
  }

  /* No tasks message */
  .no-tasks {
    text-align: center;
    color: #6c7a89;
    background: #fff;
    border-radius: 14px;
    padding: 2rem;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 575px) {
    .task-card {
      padding: 1rem;
    }
    .task-title {
      font-size: 1rem;
    }
  }
</style>

<div class="page-wrapper">
  <div class="container-fluid">
    <h3>Assigned Tasks</h3>

    <% if (!tasks || tasks.length === 0) { %>
      <div class="no-tasks">
        <p>No tasks assigned yet.</p>
      </div>
    <% } else { %>
      <div class="tasks-grid">
        <% tasks.forEach(task => { %>
          <div class="task-card">
            <div class="task-header">
              <h5 class="task-title"><%= task.title %></h5>
              <span class="badge 
                <%= task.status.toLowerCase() === 'completed' ? 'bg-success' : 'bg-warning' %>">
                <%= task.status %>
              </span>
            </div>
            <p class="task-desc"><%= task.description || 'No description provided.' %></p>
            <div class="task-meta">
              <% if (task.assignedTo) { %>
                <span class="task-assigned">
                  <%= task.assignedTo.name %> (<%= task.assignedTo.email %>)
                </span>
              <% } else { %>
                <span class="text-muted"><em>Unassigned</em></span>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>

<%- include('../../partials/footer') %>
