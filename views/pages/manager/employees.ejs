<%- include('../../partials/header', { title: 'My Team', user: user }) %>

<style>
  body {
    background-color: #f4f6f8;
    font-family: 'Inter', sans-serif;
  }

  .page-wrapper {
    padding: 2.5rem 0;
  }

  h3, h4 {
    color: #2c3e50;
    font-weight: 600;
  }

  /* Employee grid */
  .employees-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20%;
    margin-top: 1.5rem;
  }

  .employee-card {
  background: #fff;
  border-radius: 14px;
  padding: 0.75rem 1rem;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
  gap: 1rem;
}

.emp-avatar {
  flex-shrink: 0;
}

.emp-meta {
  flex: 1; /* allows this section to grow, keeping buttons visible */
  min-width: 0; /* prevents flex overflow issues */
}

.employee-actions {
  display: flex;
  flex-shrink: 0;
  align-items: center;
  gap: 0.5rem;
}

.employee-actions .btn {
  padding: 0.35rem 0.75rem;
  font-size: 0.85rem;
  border-radius: 6px;
  white-space: nowrap; /* ensures buttons donâ€™t wrap */
}



  .employee-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.08);
  }

  .emp-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: #e7f0ff;
    color: #2c3e50;
    font-weight: 700;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }


  .emp-meta h5 {
    margin: 0;
    font-size: 1rem;
    color: #2c3e50;
  }

  .emp-meta p {
    margin: 0;
    font-size: 0.9rem;
    color: #6c7a89;
  }

  .employee-actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .employee-actions .btn {
    padding: 0.35rem 0.75rem;
    font-size: 0.85rem;
    border-radius: 6px;
  }

  .btn-danger {
    background-color: #e74c3c;
    border-color: #e74c3c;
  }

  .btn-success {
    background-color: #27ae60;
    border-color: #27ae60;
  }

  /* Add Employee Form */
  .add-employee-form {
    background: #fff;
    border-radius: 10px;
    padding: 1.25rem;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
    margin-top: 1.5rem;
  }

  .add-employee-form .form-control {
    height: 44px;
    border-radius: 8px;
  }

  .add-employee-form button {
    height: 44px;
    border-radius: 8px;
  }

  @media (max-width: 575px) {
    .employees-grid {
      grid-template-columns: 1fr;
    }
    .employee-card {
      flex-direction: column;
      align-items: flex-start;
    }
    .employee-actions {
      margin-top: 0.75rem;
    }
  }
</style>

<div class="page-wrapper">
  <div class="container-fluid">

    <h3>My Employees</h3>

    <% if (employees.length === 0) { %>
      <p class="text-muted mt-3">No employees added yet.</p>
    <% } else { %>
      <div class="employees-grid">
        <% employees.forEach(emp => { %>
          <div class="employee-card">
            <div class="emp-avatar">
              <%= (emp.name || 'U').split(' ').map(n=>n[0]).slice(0,2).join('').toUpperCase() %>
            </div>
            <div class="emp-meta ms-2">
              <h5><%= emp.name %></h5>
              <p><%= emp.email %></p>
            </div>
            <div class="employee-actions">
              <form action="/manager/delete-employee/<%= emp._id %>" method="get" class="delete-form" data-name="<%= emp.name.replace(/\"/g,'&quot;') %>">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
              <a href="/manager/assign-task?employeeId=<%= emp._id %>" class="btn btn-success btn-sm">Assign Task</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <h4 class="mt-5">Add Employee</h4>
    <form action="/manager/add-employee" method="POST" class="add-employee-form">
      <div class="row g-3">
        <div class="col-md-4 col-sm-12">
          <input type="text" name="name" placeholder="Name" class="form-control" required>
        </div>
        <div class="col-md-4 col-sm-12">
          <input type="email" name="email" placeholder="Email" class="form-control" required>
        </div>
        <div class="col-md-3 col-sm-12">
          <input type="password" name="password" placeholder="Password" class="form-control" required>
        </div>
        <div class="col-md-1 col-sm-12">
          <button class="btn btn-primary w-100">Add</button>
        </div>
      </div>
    </form>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const forms = document.querySelectorAll('.delete-form');
    forms.forEach(form => {
      form.addEventListener('submit', e => {
        const name = form.dataset.name || 'this employee';
        if (!confirm(`Are you sure you want to delete ${name}? This action cannot be undone.`)) {
          e.preventDefault();
        }
      });
    });
  });
</script>

<%- include('../../partials/footer') %>
