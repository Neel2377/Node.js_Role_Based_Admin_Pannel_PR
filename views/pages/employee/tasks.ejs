<%- include('../../partials/header', { user: user }) %>

<style>
  body {
    background-color: #f4f6f9;
    font-family: "Inter", sans-serif;
  }

  .page-wrapper {
    min-height: 100vh;
    padding: 2rem;
  }

  h3 {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .table-container {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    padding: 1.5rem;
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  thead th {
    background-color: #2e86de;
    color: #fff;
    font-weight: 500;
    text-align: center;
    padding: 0.75rem;
  }

  tbody td {
    text-align: center;
    vertical-align: middle;
    padding: 0.75rem;
    color: #2c3e50;
    border-bottom: 1px solid #e9ecef;
  }

  tbody tr:hover {
    background-color: #f8fafc;
    transition: background-color 0.2s;
  }

  .badge {
    font-size: 0.85rem;
    padding: 0.4em 0.6em;
    border-radius: 0.5rem;
    font-weight: 500;
  }

  .bg-success { background-color: #27ae60 !important; }
  .bg-info { background-color: #3498db !important; }
  .bg-warning { background-color: #f1c40f !important; color: #2c3e50 !important; }

  .form-select {
    border-radius: 8px;
    border: 1px solid #ced4da;
    font-size: 0.9rem;
    padding: 0.35rem 0.5rem;
  }

  .form-select:focus {
    border-color: #3498db;
    box-shadow: 0 0 0 0.15rem rgba(52, 152, 219, 0.25);
  }

  .comment-box {
    max-height: 150px;
    overflow-y: auto;
    text-align: left;
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 0.5rem;
  }

  .comment-box p {
    font-size: 0.9rem;
    margin-bottom: 0.4rem;
  }

  .comment-box strong {
    color: #2c3e50;
  }

  .no-tasks {
    text-align: center;
    color: #777;
    padding: 2rem 0;
  }

  @media (max-width: 768px) {
    h3 {
      text-align: center;
    }

    thead th, tbody td {
      font-size: 0.9rem;
    }
  }
</style>

<div class="page-wrapper">
  <div class="container-fluid">
    <h3>My Tasks</h3>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Task Title</th>
            <th>Description</th>
            <th>Assigned By</th>
            <th>Status</th>
            <th>Update</th>
            <th>Comments</th>
          </tr>
        </thead>
        <tbody>
          <% if (tasks.length === 0) { %>
            <tr>
              <td colspan="6" class="no-tasks">No tasks assigned yet.</td>
            </tr>
          <% } else { %>
            <% tasks.forEach(task => { %>
              <tr>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.assignedBy ? task.assignedBy.name : 'N/A' %></td>
                <td>
                  <span class="badge <%= task.status === 'Completed' ? 'bg-success' : task.status === 'In Progress' ? 'bg-info text-white' : 'bg-warning text-dark' %>">
                    <%= task.status %>
                  </span>
                </td>

                <!-- Update Status -->
                <td>
                  <form action="/employee/update-task/<%= task._id %>" method="POST">
                    <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                      <option value="Pending" <%= task.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="In Progress" <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                      <option value="Completed" <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                    </select>
                  </form>
                </td>

                <!-- Comments -->
                <td>
                  <div class="comment-box">
                    <% if (task.comments && task.comments.length > 0) { %>
                      <% task.comments.forEach(c => { %>
                        <p><strong><%= c.user ? c.user.name : 'N/A' %>:</strong> <%= c.text %></p>
                      <% }) %>
                    <% } else { %>
                      <p class="text-muted mb-0">No comments yet</p>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
